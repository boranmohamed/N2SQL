# Application Settings
APP_NAME=Vanna AI Web App
APP_VERSION=0.1.0
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
DATABASE_URL=postgresql://vanna_user:vanna_password@localhost:5432/vanna_app
# For development with SQLite:
# DATABASE_URL=sqlite:///./vanna_app.db
DATABASE_ECHO=false

# Vanna AI Settings
VANNA_API_KEY=your_vanna_api_key_here
VANNA_MODEL=gpt-4
VANNA_MAX_TOKENS=1000

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>
